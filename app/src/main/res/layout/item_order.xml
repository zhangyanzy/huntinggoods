<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_indent_num_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x44"
            android:layout_marginStart="@dimen/x44"
            android:layout_marginTop="@dimen/y32"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/indent_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/indent_num_text"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/item_indent_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/indent_num_text"
                android:text="1300000000"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="00:00:00"
                android:textColor="@color/red"
                android:textSize="@dimen/x20" />

            <ImageView
                android:id="@+id/item_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/item_time"
                android:src="@mipmap/red_time_icon" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/item_indent_info_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:layout_below="@+id/item_indent_num_root"
            android:layout_marginEnd="@dimen/x44"
            android:layout_marginStart="@dimen/x44"
            android:layout_marginTop="@dimen/y24"
            android:background="@color/white_fa">

            <ImageView
                android:id="@+id/item_indent_info_image"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200" />

            <TextView
                android:id="@+id/item_indent_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:layout_toEndOf="@+id/item_indent_info_image"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/x38" />

            <TextView
                android:id="@+id/item_indent_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_indent_info_name"
                android:layout_marginTop="@dimen/y10"
                android:layout_toEndOf="@+id/item_indent_info_image"
                android:text="黑色鳄鱼皮全身定制"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/item_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginTop="@dimen/y40"
                android:text="代付款"
                android:textColor="@color/BLUE_00AACC"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/item_order_money_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_indent_info"
                android:layout_marginTop="@dimen/y24"
                android:layout_toEndOf="@+id/item_indent_info_image"
                android:text="¥"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/item_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_indent_info"
                android:layout_marginTop="@dimen/y14"
                android:layout_toEndOf="@+id/item_order_money_icon"
                android:text="1334"
                android:textColor="@color/red"
                android:textSize="@dimen/x44" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:layout_below="@+id/item_indent_info_root"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/line_e6" />
    </RelativeLayout>

    <Button
        android:id="@+id/item_delete_btn"
        android:layout_width="@dimen/x100"
        android:layout_height="match_parent"
        android:background="@color/red" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>