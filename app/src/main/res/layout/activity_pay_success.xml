<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.jinxun.hunting_goods.presentation.activity.PaySuccessActivity.Presenter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.jinxun.hunting_goods.presentation.activity.PaySuccessActivity">

        <com.jinxun.hunting_goods.weight.NavigationTopBar
            android:id="@+id/pay_success_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96">

        </com.jinxun.hunting_goods.weight.NavigationTopBar>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y200"
            android:src="@mipmap/pay_success" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x155"
            android:layout_marginTop="@dimen/y90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/take_code"
                android:textColor="@color/black"
                android:textSize="@dimen/x55"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/take_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000"
                android:textColor="@color/black"
                android:textSize="@dimen/x55"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/take_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:textSize="@dimen/x24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="快递员上门时提供给快递员"
            android:textSize="@dimen/x24" />


    </LinearLayout>
</layout>
