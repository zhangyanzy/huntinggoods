<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y276"
    android:background="@color/white"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_root"
        >

        <CheckBox
            android:id="@+id/item_shopping_car_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x38"
            android:background="@drawable/set_distribution_address_bg"
            android:button="@null"
            android:checked="false" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x44"
            android:layout_marginStart="@dimen/x18"
            android:layout_toEndOf="@+id/item_shopping_car_check"
            android:background="@color/white_fa">

            <ImageView
                android:id="@+id/item_shopping_car_image"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200" />

            <LinearLayout
                android:id="@+id/item_info_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginTop="@dimen/y20"
                android:layout_toEndOf="@+id/item_shopping_car_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_34"
                    android:textSize="@dimen/x38" />

                <TextView
                    android:id="@+id/item_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y16"
                    android:textColor="@color/silver"
                    android:textSize="@dimen/x24" />
            </LinearLayout>


            <TextView
                android:id="@+id/item_price_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_info_root"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:layout_toEndOf="@+id/item_shopping_car_image"
                android:text="@string/money_icon"
                android:textColor="@color/red_cc" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_info_root"
                android:layout_toEndOf="@+id/item_price_icon"
                android:text="1331"
                android:textColor="@color/red_cc"
                android:textSize="@dimen/x36" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:layout_alignParentBottom="true"
            android:background="@color/white_f7" />
    </RelativeLayout>

    <Button
        android:id="@+id/item_delete"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y276"
        android:background="@color/red_cc"
        android:text="确认删除"
        android:textColor="@color/white"
        android:textSize="@dimen/x36" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>