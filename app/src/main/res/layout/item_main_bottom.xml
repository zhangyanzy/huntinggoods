<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x248"
    android:layout_height="@dimen/y248"
    android:background="@drawable/item_shoe_part_bg"
    android:orientation="vertical"
    android:id="@+id/part_root"
    >

    <ImageView
        android:id="@+id/item_part_image"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y44"
        />


    <TextView
        android:id="@+id/item_part_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y18"
        android:text="@string/app_name"
        android:textColor="@color/black_39"
         />
</LinearLayout>