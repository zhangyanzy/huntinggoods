<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/root_item_shoe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x44"
            android:layout_marginTop="@dimen/y100"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/x56"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/root_item_copy_reader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/x44"
            android:layout_marginTop="@dimen/y44"
            android:src="@mipmap/copyreader_icon"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/root_item_shoe_name"
            android:layout_marginEnd="@dimen/x55"
            android:layout_marginStart="@dimen/x55"
            android:layout_marginTop="@dimen/y110"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</layout>