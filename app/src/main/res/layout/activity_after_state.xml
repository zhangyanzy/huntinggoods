<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.jinxun.hunting_goods.presentation.activity.AfterStateActivity.Presenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jinxun.hunting_goods.presentation.activity.AfterStateActivity">

        <com.jinxun.hunting_goods.weight.NavigationTopBar
            android:id="@+id/after_state_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96">


        </com.jinxun.hunting_goods.weight.NavigationTopBar>

        <ImageView
            android:id="@+id/after_state_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/after_state_top_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y350"
            android:src="@mipmap/small_item_icon" />


        <TextView
            android:id="@+id/after_state_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/after_state_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y48"
            android:text="匠人正在精心加工..."
            android:textColor="@color/black"
            android:textSize="@dimen/x30" />


    </RelativeLayout>
</layout>
