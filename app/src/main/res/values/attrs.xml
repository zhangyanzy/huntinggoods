<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--dialog-->
    <declare-styleable name="ProgressWheel">
        <attr name="progressIndeterminate" format="boolean" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="float" />
        <attr name="barSpinCycleTime" format="integer" />
        <attr name="circleRadius" format="dimension" />
        <attr name="fillRadius" format="boolean" />
        <attr name="barWidth" format="dimension" />
        <attr name="linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0" />
            <enum name="y" value="1" />
            <enum name="z" value="2" />
        </attr>
        <attr name="fromDeg" format="float" />
        <attr name="toDeg" format="float" />
        <attr name="pivotX" format="fraction" />
        <attr name="pivotY" format="fraction" />
    </declare-styleable>

    <!--下拉加载，上拉刷新-->
    <declare-styleable name="DefaultRefreshLayout">
        <attr name="header_bg" format="color" />
        <attr name="foot_bg" format="color" />
        <attr name="header_text_color" format="color" />
        <attr name="foot_text_color" format="color" />
        <attr name="header_progressBar" format="reference" />
        <attr name="foot_progressBar" format="reference" />
        <attr name="header_drawable_bg" format="reference" />
        <attr name="foot_drawable_bg" format="reference" />
        <attr name="footer" format="boolean" />
        <attr name="header" format="boolean" />
    </declare-styleable>

    <!--clearEdt-->
    <declare-styleable name="ClearTextField">

        <attr name="showClear" format="boolean"></attr>
        <!--edit-->
        <attr name="edit_text" format="string"></attr>
        <attr name="edit_text_size" format="dimension"></attr>
        <attr name="edit_text_color" format="color"></attr>
        <attr name="edit_maxLength" format="integer"></attr>
        <attr name="edit_hint" format="string"></attr>
        <attr name="edit_hint_color" format="color"></attr>
        <attr name="edit_left_drawable" format="integer"></attr>
        <attr name="edit_padding" format="dimension"></attr>
        <attr name="edit_padding_left" format="dimension"></attr>
        <attr name="edit_padding_top" format="dimension"></attr>
        <attr name="edit_padding_right" format="dimension"></attr>
        <attr name="edit_padding_bottom" format="dimension"></attr>
        <attr name="edit_errMsg" format="string"></attr>
        <attr name="edit_gravity" format="enum">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
            <enum name="center" value="4"></enum>
            <enum name="center_vertical" value="5"></enum>
            <enum name="center_horizontal" value="6"></enum>
        </attr>
        <attr name="edit_inputType" format="enum">
            <enum name="phone" value="0x00000003"></enum>
            <enum name="password" value="0"></enum>
            <enum name="number" value="0x00000002"></enum>
        </attr>

        <!--label-->
        <attr name="label_text" format="string"></attr>
        <attr name="label_text_size" format="dimension"></attr>
        <attr name="label_text_color" format="color"></attr>
        <attr name="label_layout_width" format="dimension"></attr>
        <attr name="label_padding" format="dimension"></attr>
        <attr name="label_padding_left" format="dimension"></attr>
        <attr name="label_padding_top" format="dimension"></attr>
        <attr name="label_padding_right" format="dimension"></attr>
        <attr name="label_padding_bottom" format="dimension"></attr>
        <attr name="label_gravity" format="enum">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
            <enum name="center" value="4"></enum>
            <enum name="center_vertical" value="5"></enum>
            <enum name="center_horizontal" value="6"></enum>
        </attr>


    </declare-styleable>
    <declare-styleable name="ClearEditText">
        <attr name="errMsg" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="NavigationTopBar">
        <attr name="title_text" format="string" />
    </declare-styleable>
    <declare-styleable name="CountView">
        <attr name="fold_state" format="integer" />
        <attr name="min_value" format="integer" />
        <attr name="isCart" format="boolean" />
    </declare-styleable>

    <!--Dialog 从下至上-->
    <style name="theme_animation_bottom_rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--loopView-->
    <declare-styleable name="androidWheelView">
        <attr name="awv_textsize" format="integer" />
        <attr name="awv_lineSpace" format="float" />
        <attr name="awv_centerTextColor" format="integer" />
        <attr name="awv_outerTextColor" format="integer" />
        <attr name="awv_dividerTextColor" format="integer" />
        <attr name="awv_itemsVisibleCount" format="integer" />
        <attr name="awv_isLoop" format="boolean" />
        <attr name="awv_initialPosition" format="integer" />
        <attr name="awv_scaleX" format="float" />
    </declare-styleable>
    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>


    <declare-styleable name="EdtSmsCodeLayout">
        <attr name="max_len" format="integer" />
        <attr name="item_size" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="itemWidth" format="dimension" />
        <attr name="inputType" format="enum">
            <enum name="phone" value="0x00000003" />
            <enum name="password" value="0" />
            <enum name="number" value="0x00000002" />
        </attr>

    </declare-styleable>


</resources>